@model List<Bil372_Odev1_Grup6.Models.PRODUCT>

<!DOCTYPE html>

<html>
<head>
    <style>
        html {
            font-size: 15px;
        }
    </style>

</head>
<body>
    <div>
        <div class="col-lg-9">
            <div class="table-responsive table--no-card m-b-30">
                <table class="table table-borderless table-striped table-earning">
                    <thead>
                        <tr>
                            <th>Sistem Kod</th>
                            <th>Ürün Kod</th>
                            <th>Ad</th>
                            <th>Kısa Ad</th>
                            <th>Üst Kod</th>
                            <th>Kategori</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {  
                        <tr>  
                            <td>@item.M_SYSCODE</td>
                            <td>@item.M_CODE</td>
                            <td>@item.M_NAME</td>
                            <td>@item.M_SHORTNAME</td>
                            <td>@item.M_PARENTCODE</td>
                            <td>@item.M_CATEGORY</td>
                        </tr>
}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>

